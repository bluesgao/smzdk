/* pages/home/index.wxss */

/*top tab*/
.top-tab {
    height: 36px;
    width: 750rpx;
    border-top: 1rpx solid #dddcdc;
    color: #7b7b7b;
    font-size: 15px;
    background-color: #f7f7f7;
    z-index: 9999;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-around;
    align-items: stretch;
    position: fixed;
    top: 0;
}

.top-tab .top-tab-item {
    /*display: inline-block;*//*width: 16%;*/
    flex-grow: 1;
    height: 35px;
    line-height: 35px;
    text-align: center;
}

.top-tab-item.active {
    border-bottom: 2px solid red;
    color: red;
}

.swiper {
    display: block;
    width: 100%;
    overflow: hidden;
    margin: 0;
    border: 0;
    margin-top: 0px;
    background-color: #eaeaea;
}

.scrollView {
    height: 100%;
    background-color: #eaeaea;
}

.item {
    display: flex;
    padding: 20rpx 40rpx;
    border-bottom: 1rpx solid #eee;
    cursor: pointer;
}

.item .poster {
    width: 128rpx;
    height: 128rpx;
    margin-right: 20rpx;
}

.item .meta {
    flex: 1;
}

.item .meta .title, .item .meta .sub-title {
    display: block;
    margin-bottom: 15rpx;
}

.item .meta .title {
    font-size: 32rpx;
}

.item .meta .sub-title {
    font-size: 22rpx;
    color: #c0c0c0;
}

.item .meta .artists {
    font-size: 26rpx;
    color: #999;
}

.item .rating {
    font-size: 28rpx;
    font-weight: bold;
    color: #f74c31;
}
