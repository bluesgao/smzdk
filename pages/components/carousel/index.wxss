/* pages/components/carousel/index.wxss */
/* 轮播样式 */
.gx-carousel {
    position: relative;
}

.gx-carousel .swiper {
    height: 300rpx;
}

.gx-carousel .swiper .img {
    width: 100%;
    height: 100%;
}

.gx-carousel .dots {
    position: absolute;
    right: 40rpx;
    bottom: 20rpx;
    display: flex;
    justify-content: center;
}

.gx-carousel .dots .dot {
    margin: 0 10rpx;
    width: 28rpx;
    height: 28rpx;
    background: #fff;
    border-radius: 50%;
    transition: all 0.6s;
    font: 300 18rpx/28rpx "microsoft yahei";
    text-align: center;
}

.gx-carousel .dots .dot.active {
    background: #f80;
    color: #fff;
}